<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %></title>
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag  "jquery.superslides", "jquery.animate-enhanced.min", "jquery.easing.1.3", "hammer.min", "jquery.fitvids.js","roninwood" %>
  </head>
  
  <body class="<%= page_classes %>">
    <!-- Slides Start-->
    <div id="slides">
      <!-- Slides Container Start-->
      <ul class="slides-container">
        <%= yield %>
      <!-- Slides Container End-->
      </ul>

      <nav class="slides-navigation">
        <a href="#" class="next"><h5>Next</h5></a>
        <a href="#" class="prev"><h5>Previous</h5></a>
      </nav>
    <!-- Slides End-->
    </div>
    <!-- Link Start -->
    <div class="links">
      <ul class="links">
        <li><a href="http://www.timespent.biz/" target="_blank">Timespent</a></li>
        <li><a href="mailto:roninwood@gmail.com" target="_blank">Email</a></li>
        <li><a href="https://twitter.com/roninwood" target="_blank">Twitter</a></li>
        <li><a href="http://roninwood.tumblr.com/" target="_blank">Blog</a></li>
      </ul>
    </div>
    <!-- Link End -->
  </body>
</html>